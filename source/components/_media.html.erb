
<% if media.type == "img" %>
 <%= image_tag media.url, id: "#{id}-#{index}" %>
<% elsif media.type == "facebook-video"%>
 <iframe src="https://www.facebook.com/plugins/video.php?href=<%= media.url %>&show_text=0&width=560" width="560" height="315" style="border:none;overflow:hidden" scrolling="no" frameborder="0" allowTransparency="true" allowFullScreen="true" id="<%= "#{id}-#{index}" %>"></iframe>
 <% elsif media.type == "vimeo-video" %>
 <iframe src="https://player.vimeo.com/video/<%= media.id %>" width="640" height="360" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
<% end %>
